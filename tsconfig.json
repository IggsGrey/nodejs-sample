{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": [
        "node_modules/*",
        "interfaces/*"
      ],
      "@app/*": [
        "src/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ]
    },
    "lib": [
      "es2015", "es5", "es6", "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}